@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
<head>
    <title>Sign Up</title>

    <meta charset="UTF-8">
    <link rel="stylesheet" href="~/css/project_style.css">
    <script src="~/js/scripts.js"></script>

    <style>
        /* the text that are inside the buttons */
        nav a {
            text-decoration: none;
            color: black;
        }

        /* the outside look of the links */
        nav button {
            padding: 8px 15px;
            background-color: #cfa382;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

            /* when we point the mouse in the link */
            nav button:hover {
                background-color: #fffcf9;
            }

        /* a button that takes you to a new page which is store page when we submit our sign up */
        #storeBtn {
            display: none; /* we make the button hidden untill we call it from js when we submit */
            margin-top: 15px;
            padding: 12px 25px;
            background-color: #cfa382;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

            /* when we point to the box */
            #storeBtn:hover {
                background-color: #fffcf9;
            }

            #storeBtn a {
                text-decoration: none;
                color: black;
                font-size: 18px;
                font-weight: bold;
            }
    </style>
</head>
<body>
    <!--logo bottom right-->
    <!-- the picture we will use with the usemape as a pointer to the map name -->
    <img src="/images/logo.png" usemap="#projectmap" class="project-logo">
    <map name="projectmap">
        <!--we were asked in the assigment word file to use mapping and pic mapping-->
        <!-- map basicly create a clickable region for an image-->
        <!-- area defins the looks and place of the reagion and if the region is clicked where does it take us -->
        <area shape="rect" coords="0,0,200,200" href="/Home/Index" alt="about.html">
    </map>

    <div >
        <h2 style="color: rgb(2, 1, 1); text-shadow: 1px 1px 10px rgb(73, 52, 38); font-style:italic;">Create Your Account</h2>

        <!--when the user press on submit it will return the value of to see if form is accepted or not the function we did in the scripts-->
        <form name="signUpForm" method="post" action="" >
            <div asp-validation-summary ="ModelOnly" class="text-danger" role="alert"></div>
                <div>
                <label>
                    Full Name:
                    <input asp-for="Input.Name" placeholder="folan alfolani" required>
                </label>
            </div>

            <!--phone number with a given format-->
                <div>
                <label>
                    Phone Number:
                    <input asp-for="Input.PhoneNumber" placeholder="966-5x-xxx-xxxx"
                           pattern="966-5[0-9]-[0-9]{3}-[0-9]{4}" required>
                </label>
            </div>

                <div>
                <label>
                    Email:
                    <input asp-for="Input.Email" placeholder="yourEmail@domain" required>
                </label>
            </div>

                <div>
                <label>
                    Password:
                    <input asp-for="Input.Password" placeholder="**********" required>
                </label>
            </div>
                <div>
                <input type="submit" value="submit">
                <input type="reset" value="reset">

                <p>
                    Already have an account?
                </p>
                <a class="nav-btn" asp-area="Identity" asp-page="/Account/Login">Log In</a>
            </div>
            
        </form>

    </div>



    
</body>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
