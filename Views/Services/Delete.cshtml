@model CPIS_358_project.Models.Services

@{
    ViewData["Title"] = "Delete";
}

<link rel="stylesheet" href="~/css/project_style.css">

<style>

    main {
        margin-top: 90px;
    }

    
    .content-container {
        display: inline-block;
        text-align: left;
        width: 100%;
        max-width: 600px; 
        background-color: rgba(255, 255, 255, 0.4);
        border-radius: 15px;
    }

</style>

<main>
    <h1 style="color: rgb(2, 1, 1); text-shadow: 1px 1px 10px rgb(73, 52, 38); font-style:italic;">Delete Service</h1>

    <h3 style="color: #c46a25;">Are you sure you want to delete this?</h3>
    <hr style="border-top: 2px solid #c46a25; width: 50%; margin: auto; margin-bottom: 20px;" />

    <div class="row justify-content-center">
        <div class="col-md-8" style="margin: auto;">

            <fieldset>
                <div class="content-container">
                    <h4 style="text-align: center; color: #412323;">Service Details</h4>
                    <hr style="border-color: #cfa382;">

                    <dl class="row">
                        <dt class="col-sm-6">
                            @Html.DisplayNameFor(model => model.Name)
                        </dt>
                        <dd class="col-sm-6">
                            @Html.DisplayFor(model => model.Name)
                        </dd>

                        <dt class="col-sm-6">
                            @Html.DisplayNameFor(model => model.Profession)
                        </dt>
                        <dd class="col-sm-6">
                            @Html.DisplayFor(model => model.Profession)
                        </dd>

                        <dt class="col-sm-6">
                            Years of Experience
                        </dt>
                        <dd class="col-sm-6">
                            @Html.DisplayFor(model => model.yearsOfExperience)
                        </dd>
                    </dl>

                    <div style="text-align: center; margin-top: 20px;">
                        <form asp-action="Delete">
                            <input type="hidden" asp-for="ID" />

                            <input type="submit" value="Delete" class="nav-btn" style="font-weight: bold; min-width: 100px;" />

                            <span style="margin: 0 10px;"></span>

                            <a asp-action="Index" class="secondary-button">Back to List</a>
                        </form>
                    </div>
                </div>
            </fieldset>

        </div>
    </div>
</main>